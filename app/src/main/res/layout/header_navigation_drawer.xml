<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/leagueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Любительская футбольная лига"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Любительская футбольная лига" />

    <Spinner
        android:id="@+id/spinnerLeagues"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:dropDownSelector="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/leagueName"
        app:layout_constraintTop_toBottomOf="@+id/leagueName"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>