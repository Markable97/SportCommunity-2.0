<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FontRegular">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="FontLight">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">200</item>
    </style>

    <style name="FontMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="FontBold">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text12_sp_regular" parent="FontRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text12_sp_medium" parent="FontMedium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text14_sp_regular" parent="FontRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text14_sp_medium" parent="FontMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text14_sp_light" parent="FontLight">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text16_sp_regular" parent="FontRegular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text16_sp_medium" parent="FontMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text20_sp_regular" parent="FontRegular">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text20_sp_medium" parent="FontMedium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text24_sp_bold" parent="FontBold">
        <item name="android:textSize">24sp</item>
    </style>

</resources>