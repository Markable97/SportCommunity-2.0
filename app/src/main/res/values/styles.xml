<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewTableRow">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/text14_sp_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewTableHeader">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/text16_sp_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewTournament">
        <item name="contentPadding">5dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="TabLayout.Dots" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabBackground">@drawable/selector_dot_tab</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SmallComponent</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.Button.OutlinedButton.Big" parent="Widget.Button.OutlinedButton">
        <item name="android:textAppearance">@style/text24_sp_bold</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
<!--        <item name="android:backgroundTint">@color/white</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.SmallComponent</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/text14_sp_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Button.Big" parent="Widget.Button">
        <item name="android:textAppearance">@style/text24_sp_bold</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheet" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bg_white_rounded</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/buttons</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">49dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="RadioButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:buttonTint">@color/purple_200</item>
    </style>

</resources>